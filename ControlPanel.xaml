<Window x:Class="NiceToEyes.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nice To Eyes - Control Panel"
        Width="380"
        Height="520"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30"
        Closing="Window_Closing">
    
    <Window.Resources>
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF505055"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF505055"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF0088DD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="5,5,5,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸŒ™ Nice To Eyes" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#FF007ACC"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>
        
        <TextBlock Grid.Row="1" 
                   Text="Dark overlay for eye comfort" 
                   FontSize="12" 
                   Foreground="#FF888888"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Overlay Toggle -->
        <ToggleButton x:Name="ToggleOverlay"
                      Grid.Row="2"
                      Content="Show Overlay"
                      Style="{StaticResource ToggleButtonStyle}"
                      Click="ToggleOverlay_Click"
                      IsChecked="True"
                      Height="40"/>
        
        <!-- Opacity Slider -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <TextBlock Text="Darkness:" Foreground="White" Margin="5,0,0,0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="OpacitySlider"
                        Grid.Column="0"
                        Minimum="0"
                        Maximum="100"
                        Value="50"
                        Style="{StaticResource SliderStyle}"
                        ValueChanged="OpacitySlider_ValueChanged"/>
                <TextBlock x:Name="OpacityValue" 
                           Grid.Column="1" 
                           Text="50%" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
        
        <!-- Color Presets -->
        <StackPanel Grid.Row="4" Margin="0,15,0,0">
            <TextBlock Text="Color Presets:" Foreground="White" Margin="5,0,0,5"/>
            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="ColorBlack" Content="Black" Style="{StaticResource DarkButton}" Click="ColorPreset_Click" Tag="#000000"/>
                <Button x:Name="ColorBrown" Content="Sepia" Style="{StaticResource DarkButton}" Click="ColorPreset_Click" Tag="#3D2B1F"/>
                <Button x:Name="ColorInverted" Content="Inverted" Style="{StaticResource DarkButton}" Click="ColorPreset_Click" Tag="INVERT"/>
            </WrapPanel>
        </StackPanel>
        
        <!-- Instructions -->
        <Border Grid.Row="5" 
                Background="#FF252526" 
                CornerRadius="4" 
                Margin="0,15,0,0"
                Padding="10">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Instructions:" 
                           Foreground="#FF007ACC" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock Text="1. Drag the âœš icon (top-left) to move" 
                           Foreground="#FFAAAAAA" 
                           FontSize="11"
                           TextWrapping="Wrap"/>
                <TextBlock Text="2. Drag the corner grip (bottom-right) to resize" 
                           Foreground="#FFAAAAAA" 
                           FontSize="11"
                           TextWrapping="Wrap"/>
                <TextBlock Text="3. Click the X icon (top-right) to hide" 
                           Foreground="#FFAAAAAA" 
                           FontSize="11"
                           TextWrapping="Wrap"/>
                <TextBlock Text="4. The overlay is always click-through" 
                           Foreground="#FFAAAAAA" 
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <TextBlock Grid.Row="6" 
                   Text="Minimize this window to system tray" 
                   Foreground="#FF666666"
                   FontSize="10"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
