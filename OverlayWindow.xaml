<Window x:Class="NiceToEyes.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NiceToEyes Overlay"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="400"
        Height="400"
        Left="100"
        Top="100">
    
    <Grid>
        <!-- Main overlay rectangle - always click-through -->
        <Border x:Name="OverlayBorder"
                Background="#80000000"
                CornerRadius="0"
                BorderThickness="0">
        </Border>
    </Grid>
</Window>
